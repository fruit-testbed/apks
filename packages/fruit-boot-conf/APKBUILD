pkgname="fruit-boot-conf"
pkgver="0.0.4"
pkgrel="0"
pkgdesc="Public keys for Fruit packages"
url="https://fruit-testbed.org"
arch="noarch"
license="BSD"
depends=""
makedepends=""
install=""
subpackages=""
source="cmdline.txt config.txt"
options="!check"

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"/boot
	for f in $source; do
		install "$srcdir"/"$f" "$pkgdir"/boot/"$f"
	done
}

