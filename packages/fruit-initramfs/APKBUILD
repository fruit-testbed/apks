# Maintainer: "Herry <herry.herry@glasgow.ac.uk>"
pkgname=fruit-initramfs
pkgver=4.14.52
pkgrel=0
pkgdesc="Linux Initramfs with U-Boot"
url="http://fruit-testbed.org"
arch="armhf"
license="BSD"
depends="mkinitfs fruit-u-boot"
depends_dev=""
makedepends="$depends_dev"
install="$pkgname.post-install $pkgname.post-upgrade"
subpackages=""
source="initramfs-init"
builddir="$srcdir/${pkgname}-${pkgver}"
options="!strip suid !check"

prepare() {
	default_prepare
}

build() {
	return 0
}

package() {
	mkdir -p ${pkgdir}/usr/share/fruit/
	install -m640 -o root -g root ${srcdir}/initramfs-init ${pkgdir}/usr/share/fruit/
}
sha512sums="d526ababda56a0048e17df6e42ad1aac1bc99203363f47e28c661cc4ce1f2b6543780d6d77e2f3932998f50283ab9d0b8197ab6cd31be7d25218a15634267840  initramfs-init"
