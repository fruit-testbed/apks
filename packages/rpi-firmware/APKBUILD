# Maintainer: "fruit <info@fruit-testbed.org>"
pkgname=rpi-firmware
pkgver=20170811
pkgrel=0
pkgdesc="RaspberryPi Firmwares"
url="https://github.com/RPi-Distro/firmware-nonfree"
arch="noarch"
license="custom"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="brcmfmac43430-sdio.bin::https://raw.githubusercontent.com/RPi-Distro/firmware-nonfree/master/brcm/brcmfmac43430-sdio.bin
LICENCE.broadcom_bcm43xx::https://raw.githubusercontent.com/RPi-Distro/firmware-nonfree/master/LICENCE.broadcom_bcm43xx"
builddir="$srcdir/${pkgname}-${pkgver}"
options="!strip suid !check"

prepare() {
	default_prepare
}

build() {
	return 0
}

package() {
	mkdir -p ${pkgdir}/lib/firmware/brcm
	cp -f ${srcdir}/brcmfmac43430-sdio.bin ${pkgdir}/lib/firmware/brcm/
	cp -f ${srcdir}/LICENCE.broadcom_bcm43xx ${pkgdir}/lib/firmware/brcm/LICENCE.broadcom_bcm43xx
}
