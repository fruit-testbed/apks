# Maintainer: "fruit <info@fruit-testbed.org>"
pkgname=rpi-firmware
pkgver=20180615
pkgrel=2
pkgdesc="RaspberryPi Firmwares"
url="https://github.com/RPi-Distro/firmware-nonfree"
arch="aarch64"
license="custom"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="${pkgname}-${pkgver}.tar.gz::http://dl-4.alpinelinux.org/alpine/edge/main/${arch}/linux-firmware-brcm-${pkgver}-r${pkgrel}.apk"
builddir="$srcdir/${pkgname}-${pkgver}"
options="!strip suid !check"

prepare() {
	default_prepare
}

build() {
	return 0
}

package() {
	mkdir -p ${pkgdir}/lib/firmware/brcm
	cp -f ${srcdir}/lib/firmware/brcm/*brcmfmac43430* ${pkgdir}/lib/firmware/brcm
}
