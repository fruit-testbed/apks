# Contributor: "Herry <herry.herry@glasgow.ac.uk>"
# Maintainer: "Herry <herry.herry@glasgow.ac.uk>"
pkgname=rpi-boot-linux
pkgver=1.20170811
pkgrel=0
pkgdesc="Boot and Linux Kernel for RaspberryPi 1"
url="https://github.com/raspberrypi/firmware"
arch="armhf"
license="GPL"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="firmware-${pkgver}.zip::https://github.com/raspberrypi/firmware/archive/1.20170811.zip"
builddir="$srcdir/firmware-${pkgver}"
options="!strip suid !check"

prepare() {
	default_prepare
}

build() {
	return 0
}

package() {
	mkdir -p ${pkgdir}/boot/
	cp -rf ${builddir}/boot/overlays ${pkgdir}/boot/
	cp -rf ${builddir}/boot/bcm2708-* ${pkgdir}/boot/
	cp -rf ${builddir}/boot/bootcode.bin ${pkgdir}/boot/
	cp -rf ${builddir}/boot/fixup.dat ${pkgdir}/boot/
	cp -rf ${builddir}/boot/kernel.img ${pkgdir}/boot/
	cp -rf ${builddir}/boot/start.elf ${pkgdir}/boot/
	cp -rf ${builddir}/boot/COPYING.linux ${pkgdir}/boot/
	cp -rf ${builddir}/boot/LICENCE.broadcom ${pkgdir}/boot/
}	
sha512sums="9091b5d2fa625b49486c143eddefbd6dc3753e4bcea69827f4eefa76ab91a86d56b2a8ea05a2322b077d69e0b211b16bfd5e464fe56bbee9e3cacf6c7cca3c22  firmware-1.20170811.zip"
