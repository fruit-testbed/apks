pkgname=rpi-boot
pkgver=1.20170811
pkgrel=0
pkgdesc="RaspberryPi Boot Files"
url="https://github.com/raspberrypi/firmware"
arch="armhf"
license="GPL"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="${pkgname}-${pkgver}.zip::https://github.com/raspberrypi/firmware/archive/1.20170811.zip"
builddir="$srcdir/firmware-${pkgver}"
options="!strip suid"

prepare() {
	default_prepare
}

build() {
	return 0
}

package() {
	mkdir -p ${pkgdir}/boot/
	cp -rf ${builddir}/boot/* ${pkgdir}/boot/
}	
