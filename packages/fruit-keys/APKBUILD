# Maintainer: Herry <herry.herry@glasgow.ac.uk>
pkgname="fruit-keys"
pkgver="0.0.4"
pkgrel="0"
pkgdesc="Public keys for Fruit packages"
url="https://fruit-testbed.org"
arch="noarch"
license="BSD"
depends=""
makedepends=""
install=""
subpackages=""
source="fruit-apk-key.rsa.pub"
options="!check"

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"/etc/apk/keys
	for key in $source; do
		install -Dm644 "$srcdir"/"$key" "$pkgdir"/etc/apk/keys/"$key"
	done
}

sha512sums="5afa51980d231c17c9ee2612329d4ab5bcff86c138c691812ede85f68c1e05eb6171c8555bf8415070692a8a5a5c5ee700ba530d054ad8e995ffe08d479e8b76  fruit-apk-key.rsa.pub"
